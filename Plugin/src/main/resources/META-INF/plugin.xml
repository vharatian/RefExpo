<idea-plugin>
    <id>com.github.vharatian.refexpo</id>
    <name>RefExpo</name>
    <vendor>Vahid Haratian</vendor>
    <description>
        RefExpo is an IntelliJ plugin that constructs a dependency graph of a project. It supports all languages that IntelliJ supports.
    </description>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="RefExpo" anchor="right" factoryClass="RefExpoToolWindowFactory"/>
    </extensions>
    <!-- Additional configurations as needed -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.vcs</depends>
    <depends>com.intellij.modules.python</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>JavaScript</depends>
</idea-plugin>

